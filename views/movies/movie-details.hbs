<h2>{{movie.title}}</h2>

<p>{{movie.genre}}</p>
<p>{{movie.plot}}</p>

<ul>
	{{#each movie.cast}}
		<li>{{this.name}} - {{this.occupation}}: "{{this.catchPhrase}}"</li>
	{{/each}}
</ul>

<form action="/movies/{{movie._id}}/delete" method="post">
	<button type="submit">Delete Movie</button>
</form>
<a href="/movies/{{movie._id}}/edit">Edit</a>
